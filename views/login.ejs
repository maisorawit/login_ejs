    <title>Login</title>
</head>

<body>
    <form action="/result" method="post">
        <fieldset>

            <center>

                <div class="border border-primary" style="margin:10%;margin-left:30%;margin-right:30%; background-color: black">
                    <div class="container" style="padding:5%">

                        <legend style="color: white ;font-size:60px"><b>Login</b></legend><br>

                        <div class="rows" style="color: white ;font-size:20px">
                            <label>Username : </label>
                            <input name="user" type="text" placeholder=" Username" />
                        </div><br>

                        <div class="rows " style="color: white ;font-size:20px">
                            <label>Password : </label>
                            <input name="pass" type="password" placeholder=" Password " />
                        </div><br>


                        <div class="btn-group btn-group-lg ">
                            <button class="btn btn-primary " type="submit ">Login</button>
                        </div><br>

                    </div>
                </div>
            </center>
        </fieldset>
    </form>
